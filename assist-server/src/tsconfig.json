{
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "../build",
    "sourceMap": false,
    "target": "es5"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./**/*.ts",
    "../typings/main.d.ts"
  ],
  "files": [
    "./core/auth.ts",
    "./core/index.ts",
    "./core/session.ts",
    "./index.ts",
    "../typings/main.d.ts"
  ]
}
